		{
			"name": "POST /tasks - Создание товара 1",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Мужская обувь 38 размер\",\n    \"description\": \"Черные кожаные туфли\",\n    \"completed\": false\n}"
				},
				"url": {
					"raw": "{{base_url}}/tasks",
					"host": ["localhost"],
					"port": "3000",
					"path": ["tasks"]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Сохраняем ID созданной задачи",
							"if (pm.response.code === 201) {",
							"    var responseData = pm.response.json();",
							"    pm.collectionVariables.set(\"task_id\", responseData.task.id);",
							"    console.log(\"Task ID saved:\", responseData.task.id);",
							"}"
						]
					}
				}
			]
		},
